<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="JoinMapper">

	<!-- 그룹 참여 인원 -->
	<select id="count" parameterType="int" resultType="int">
		select count(*) from ch_join where group_idx=#{idx}
	</select>
	
	<!-- 그룹 참여 -->
	<insert id="join" parameterType="Join">
		insert into ch_join values(ch_join_seq.nextval,#{group_idx}, #{id}, sysdate)
	</insert>

	<!-- 그룹 전체 정보 -->	
	<select id="selectAll" resultType="Join">
		select * from ch_join where group_idx=#{idx}
	</select>
	
	<!-- 회원이 속한 그룹 찾아오기 -->	
	<select id="selectMy" resultType="Join">
		select * from ch_join where id=#{id}
	</select>
	
	<!--방장이 그룹원 추방 기능  -->
	  <delete id="removeMember" parameterType="RemoveMember">
        DELETE FROM group_members
        WHERE group_id = #{groupId} AND user_id = #{userId};
    </delete>
</mapper>