<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MemberMapper">
	<!-- 회원가입 -->
	<insert id="join" parameterType="Member">
		insert into ch_member values (#{id}, #{pw}, #{name}, #{nick}, #{email}, #{phone}, #{birthdate}, #{fav_books}, sysdate)
	</insert>
	
	<!-- 로그인 -->
	<select id="login" parameterType="Member" resultType="Member">
		select * from ch_member where id=#{id} and pw=#{pw}
	</select>
	
	<!-- 아이디 중복 체크 -->
	<select id="idCheck" resultType="boolean">
		select count(*) from ch_member where id = #{id}
	</select>
	
	<!-- 회원정보 가져오기 -->
	<select id="selectAll" resultType="Member">
		select * from ch_member
	</select>
	
	<!-- 회원정보 수정 -->
	<update id="update" parameterType="Member">
		update ch_member set pw=#{pw}, nick=#{nick}, email=#{email}, phone=#{phone}, fav_books=#{fav_books} where id=#{id}
	</update>
	
	<!-- 업데이트 회원정보 가져오기 -->
	<select id="memberInfo" resultType="Member">
		select * from ch_member where id=#{id}
	</select>
	

	 <!-- 회원 탈퇴 -->
	 
	<!-- CH_GC_ITEMS에서 회원의 데이터를 삭제 -->
<delete id="deleteFromGcItems" >
    DELETE FROM ch_gc_items WHERE id = #{id}
</delete>

<!-- CH_GROUP에서 관리자 또는 부방장이 해당하는 그룹을 삭제 -->
<delete id="deleteFromGroup" >
    DELETE FROM ch_group WHERE manager = #{id} 
</delete>

<!-- CH_JOIN에서 해당 회원이 가입한 그룹을 삭제 -->
<delete id="deleteFromJoin" >
    DELETE FROM ch_join WHERE id = #{id}
</delete>

<!-- CH_MEMBER에서 회원 데이터를 삭제 -->
<delete id="deleteFromMember" >
    DELETE FROM ch_member WHERE id = #{id}
</delete>

	
	
</mapper>