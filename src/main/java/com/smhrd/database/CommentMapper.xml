<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CommentMapper">

	<!-- 댓글 수 가져오기 -->
	<select id="commentCount" resultType="int">
		select count(*) from ch_comment where review_idx=#{review_idx}
	</select>
	
	<!-- 댓글 작성 -->
	<insert id="commentWrite">
		insert into ch_comment values (ch_comment_seq.nextval, #{review_idx}, #{cmt_content}, sysdate, #{id})
	</insert>
	
	<!-- 댓글 리스트 가져오기 -->
	<select id="commentList" resultType="Comment">
		select * from ch_comment where review_idx=#{review_idx} order by created_at desc
	</select>
	
</mapper>