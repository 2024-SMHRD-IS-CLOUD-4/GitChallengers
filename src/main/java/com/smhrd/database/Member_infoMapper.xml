<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Member_infoMapper">
	<!-- 회원정보 가져오기 -->
	<select id="info" resultType="info">
		select * from ch_member_info where id=#{id}
	</select>
	
	<!-- 프로필 수정 -->
	<update id="update" parameterType="info">
		update ch_member_info set profile_img=#{profile_img}, intro=#{intro} where id=#{id}
	</update>
	
</mapper>