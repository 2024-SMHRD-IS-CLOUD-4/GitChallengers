<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="GroupMapper">
	<!-- 그룹리스트 가져오기 -->
	<select id="selectAll" resultType="Group">
		select * from ch_group
	</select>
	
	<!-- 그룹 생성 -->
	<insert id="createGroup" parameterType="Group">

		insert into ch_group values (ch_group_seq.nextval, #{group_name}, #{group_desc}, #{manager}, #{sub_manager}, sysdate, 10, 0, #{days})
	
	</insert>
	
	<!-- 그룹 정보 가져오기 -->
	<select id="groupInfo" resultType="Group">
		select * from ch_group where group_idx=#{idx}
	</select>
	
	<!-- 그룹 챌린지 검색 -->
	<select id="search" resultType="Group">
		select * from ch_group where group_name like '%'||#{keyword}||'%'
	</select>

	<!-- 방 자동 삭제 -->
	<delete id="deleteGroup">
		DELETE FROM ch_join WHERE group_idx = #{group_idx}
	</delete>
	
	<!-- 방장 교체 -->
	<update id="update" parameterType="Group">
		update ch_group set manager=#{manager}, sub_manager=#{sub_manager} where group_idx=#{group_idx}
	</update>
	
</mapper>